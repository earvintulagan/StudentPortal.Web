
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Student.cshtml";
}


<h2>Profile</h2>

<div class="row">

    <div class="panel-body">
        <dl>
            <dt>@Session["Lastname"].ToString()</dt>
            <dd>Last Name</dd>
            <dt>@Session["Firstname"].ToString()</dt>
            <dd>Firstname</dd>
            <dt>@Session["Middlename"].ToString()</dt>
            <dd>Middle Name</dd>
            <dt>@Session["Gender"].ToString()</dt>
            <dd>Gender</dd>
            <dt>@Session["Address"].ToString()</dt>
            <dd>Address</dd>

        </dl>

    </div>
    <!-- /.panel-body -->

</div>

<div class="panel-body">
    <!-- Button trigger modal for Update-->
    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        Update my Contact Info
    </button>
    <!-- Button trigger modal for Question -->
    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalQuestion">
        Ask a Question
    </button>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Update your Contact Information</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" action="/Student/UpdAccess">

                        <div class="form-group">
                            <label>Student Number</label>
                            <input type="text" id="Studentnum" name="Studentnum" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" id="Password" name="Password" class="form-control" />
                        </div>


                        <button class="login100-form-btn">
                            Enter
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="myModalQuestion" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Ask a Question</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" method="POST" id="Question" action="/Student/getConcern">

                        <div class="form-group">
                            <label>Student Number</label>
                            <input type="text" id="Studentnum" name="Studentnum" class="form-control" value="@Session["Studentnum"].ToString()" />
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" id="Email" name="Email" class="form-control" value="@Session["Email"].ToString()" />
                        </div>

                        <div class="form-group">
                            <label>Subject</label>
                            <input type="text" id="Subject" name="Subject" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Content</label>
                            <textarea id="Content" name="Content" rows="3" class="form-control"></textarea>
                        </div>

                        <button type="submit" id="Send" class="btn btn-success">Send</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

